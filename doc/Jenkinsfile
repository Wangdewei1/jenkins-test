pipeline {
    agent any

    environment {
        REMOTE_HOST = "192.168.141.130"
        REMOTE_USER = "root"
        REMOTE_PASS = "123456"
        REMOTE_DIR  = "/home/project/test"
        JAR_NAME    = "jenkins-test.jar" // æ„å»ºå jar åç§°ï¼ˆå»ºè®®æ¢æˆå®é™… jarï¼‰
    }

    stages {

        stage('æ‹‰å–ä»£ç ') {
            steps {
                git url: 'https://github.com/Wangdewei1/jenkins-test.git'
            }
        }

        stage('Maven æ„å»º') {
            steps {
                sh 'mvn clean package -Dmaven.test.skip=true'
            }
        }

        stage('ä¸Šä¼ åˆ°è¿œç¨‹æœåŠ¡å™¨') {
            steps {
                sshPublisher(
                    publishers: [
                        sshPublisherDesc(
                            configName: 'deploy-vm', // ä½ åœ¨ Jenkins Publish Over SSH é‡Œé…ç½®çš„åç§°
                            transfers: [
                                sshTransfer(
                                    sourceFiles: 'target/*.jar',
                                    removePrefix: 'target',
